<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/home.css">
</head>

<body>
    <div class="card">
        <div class="card-body">
            <h2>TODO APP</h2>
            <div class="form_class">
                <form action="/create_todo" method="POST">
                    <hr>
                    <div class="desc_class">
                        <label for="desc">Description</label>
                        <br>
                        <input class="input_class border_none font_ad" type="textarea" required name="desc"
                            placeholder="What do you need to do?">
                    </div>
                    <hr>
                    <div class="selection">
                        <div class="category_selection">
                            <label for="category">Category</label>
                            <br>
                            <select name="category" class="duecategory border_none font_ad" required>
                                <option value="" disabled selected>Choose a Category</option>
                                <option>Personal</option>
                                <option>Work</option>
                                <option>School</option>
                                <option>Cleaning</option>
                                <option>Others</option>
                            </select>
                        </div>

                        <div class="date_selection">
                            <label for="date">Due Date</label><br>
                            <input class="duedate border_none font_ad" type="date" name="duedate"
                                placeholder="Due data dd/mm/yyyy" required>
                        </div>
                    </div>
                    <hr>
                    <div class="buttons_div">
                        <button class="button colorBlack" id="submitButton" type="submit"><i class="fa fa-plus-square">
                            </i>
                            Add Task</button>
                        <button class="button colorRed" id="deleteButton" type="submit"><i class="fa fa-trash-o"></i>
                            Delete Task</button>
                    </div>
                </form>

            </div>

            </form>

        <div class ="container">
            <% for(let i of todoList) { let j=0; let newIds='descids'+j; %>
                <div class="singleTask">
                    <input type="checkbox" name="delechack" class="delechack" onclick="checkedOrNot()" uid = <%= i._id %> >
                    <div class="name_and_dueD">
                        <p id=<%= i._id %>  uid = <%= i._id %> class="dispdsc"><%= i.desc %></p>
                        <p id=<%= i._id + i.dueD %> class="dueD"  ><%= i.dueD %></p>
                    </div>
                    <div class="catesec">
                        <%= i.category %>
                    </div>
                </div>
                <% j++; } %>
 
        </div>
    </div>

    </div>
    <script src="https://kit.fontawesome.com/c33fd7f1a1.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="/js/script.js" type="text/javascript"></script>
</body>

</html>